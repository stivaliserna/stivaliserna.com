---
import Social from "./Social.astro";
---

<footer>
  <div>
    <a href="/" class="name">St√≠vali Serna</a>
    <Social isFooter={true} />
  </div>
</footer>

<style>
  footer {
    background-color: var(--purple-light);
    bottom: 0;
    left: 0;
    position: fixed;
    right: 0;
    box-shadow: var(--top-shadow);
  }

  footer div {
    margin: 0 auto;
    max-width: 53rem;
    display: flex;
    padding: 0.5rem 2rem;
    justify-content: space-between;
  }

  .name {
    color: var(--primary);
    font-family: var(--ff-primary);
    font-size: 1.5rem;
    margin: 0;
  }

  .name:is(:hover) {
    opacity: 0.5;
    text-decoration: none;
  }

  @media (min-width: 576px) {
    .name {
      font-size: 2rem;
    }
  }
</style>
