# EditorConfig: http://editorconfig.org

# top-most EditorConfig file
root = true

# Unix-style newlines with a newline ending every file
[*]
end_of_line = lf
insert_final_newline = true

[*.html]
indent_style = tab
tab_width = 2

[*.{css,js,md}]
indent_style = space
indent_size = 2

[*.{css, js}]
trim_trailing_whitespace = true
